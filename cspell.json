{
  "version": "0.2",
  "language": "en",
  "words": ["drishti", "mjsx", "mtsx", "harpo"],
  "ignoreWords": [
    "eamodio",
    "dbaeumer",
    "esbenp",
    "sonarjs",
    "nextjs",
    "tabler",
    "tseslint",
    "noto",
    "segoe",
    "neue",
    "menlo",
    "consolas"
  ],
  "flagWords": ["hte"],
  "allowCompoundWords": true,
  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "*.svg",
    "*.lock",
    "cspell.json",
    ".gitignore",
    ".prettierignore"
  ],
  "overrides": [
    {
      "filename": "**/{stories,spec,test}.{ts,tsx,js,jsx}",
      "dictionaries": ["lorem-ipsum"]
    }
  ]
}
