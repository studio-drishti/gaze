{
  "name": "gaze",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "release": "turbo build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.0",
    "@gaze-ui/eslint-config": "*",
    "@gaze-ui/tsconfig": "*",
    "eslint": "8.56.0",
    "eslint-config-turbo": "0.0.7",
    "prettier": "2.8.4",
    "turbo": "1.7.4",
    "typescript": "5.0.2",
    "webpack": "5.75.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
