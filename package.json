{
  "name": "gaze",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "packageManager": "npm@10.8.3",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "release": "turbo build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.7",
    "@gaze-ui/eslint-config": "*",
    "@gaze-ui/stylelint-config": "*",
    "@gaze-ui/tsconfig": "*",
    "eslint": "9.9.1",
    "eslint-config-turbo": "2.1.0",
    "prettier": "3.3.3",
    "stylelint": "16.9.0",
    "turbo": "2.1.0",
    "typescript": "5.5.4",
    "webpack": "5.94.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
