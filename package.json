{
  "name": "gaze",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "release": "turbo build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@gaze-ui/eslint-config": "*",
    "@gaze-ui/stylelint-config": "*",
    "@gaze-ui/tsconfig": "*",
    "eslint": "9.0.0",
    "eslint-config-turbo": "1.13.2",
    "prettier": "3.2.5",
    "stylelint": "16.3.1",
    "turbo": "1.13.2",
    "typescript": "5.4.5",
    "webpack": "5.91.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
