{
  "source": ["src/tokens/**/*.json"],
  "platforms": {
    "css": {
      "transforms": [
        "attribute/cti",
        "name/kebab",
        "size/pxToRem",
        "color/css",
        "fontFamily/css"
      ],
      "buildPath": "dist/css/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables"
        }
      ]
    }
  }
}
